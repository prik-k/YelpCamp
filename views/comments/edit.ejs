<%- include("../partials/header") %>

<header class="jumbotron">
	<div class="container">
		<div class="row">
			<h1 style="text-align: center;">Edit a Comment </h1>
				<div style="width: 30%; margin: 0 auto;">
					
					<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">

						<div class="form-group">
							<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" > 
						</div>

						<div class="form-group">
							<button class="btn btn-primary btn-large btn-block">Edit!</button>	
						</div>
						
					</form>
				</div>
			<br><a class="btn btn-primary btn-large" href="/campgrounds">View Campgrounds</a>
		</div>
	</div>
</header>

