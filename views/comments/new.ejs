<%- include("../partials/header") %>

<header class="jumbotron">
	<div class="container">
		<div class="row">
			<h1 style="text-align: center;">Add a New Comment to <%= campground.name %></h1>
				<div style="width: 30%; margin: 0 auto;">
					
					<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
						<div class="form-group">
							<input class="form-control" type="text" name="comment[text]" placeholder="text"> 
						</div>
					
						<div class="form-group">
							<button class="btn btn-primary btn-large btn-block">Submit!</button>	
						</div>
					</form>
				</div>
			<br><a class="btn btn-primary btn-large" href="/campgrounds">View Campgrounds</a>
		</div>
	</div>
</header>

<%- include("../partials/footer") %>
